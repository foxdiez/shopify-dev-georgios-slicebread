{{ 'main-product-details.css' | asset_url | stylesheet_tag }}

<div class="card-component details-accordion">
    <div class="accordion-container">
        <div class="accordion-item">
            <input type="checkbox" name="accordion" id="{{ block.id }}">
            <label class="accordion-label" for={{ block.id }}>
                {% render 'icon-arrow-up' %}
                <h3>{{ 'main_product_info.product_details' | t }}</h3>
            </label>
            <article class="accordion-content">
                {{ product.description }}
            </article>
        </div>
    </div>
</div>