{% liquid
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign padding_sides = section.settings.padding_sides
  assign padding_top_mobile = section.settings.padding_top_mobile
  assign padding_bottom_mobile = section.settings.padding_bottom_mobile
  assign padding_sides_mobile = section.settings.padding_sides_mobile
%}

{% style %}
  #{{ section.id }}.section-padding-settings {
    padding: {{ padding_top }}px {{ padding_sides }}px {{ padding_bottom }}px {{ padding_sides }}px;
  }

  @media (max-width: 767px) {
    #{{ section.id }}.section-padding-settings {
      padding: {{ padding_top_mobile }}px {{ padding_sides_mobile }}px {{ padding_bottom_mobile }}px {{ padding_sides_mobile }}px;
    }
  }
{% endstyle %}

<div id="{{ section.id }}" class="section-padding-settings flex flex-col d-gap-15">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'accordion' %}
        {% liquid
          assign title = block.settings.title | default: false
          assign rich_text = block.settings.rich_text | default: false
        %}

        {% render 'main-accordion-component' 
          block: block,
          title: title,
          rich_text: rich_text
        %}
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Main accordion component",
    "tag": "section",
    "enabled_on": {
      "templates": ["product"]
    },
    "settings": [
      {
        "type": "header",
        "content": "Spacing - Desktop"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top - Desktop",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom - Desktop",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding_sides",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding sides - Desktop",
        "default": 15
      },
      {
        "type": "header",
        "content": "Spacing - Mobile"
      },
      {
        "type": "range",
        "id": "padding_top_mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top - Mobile",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding_bottom_mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom - Mobile",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding_sides_mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding sides - Mobile",
        "default": 15
      }
    ],
    "blocks": [
      {
        "type": "accordion",
        "name": "Accordion",
        "settings": [
          {
            "type": "header",
            "content": "Settings",
            "info": "This accordion can use unique custom content coming from a Product metafield. To control the content visit the product's page in the Shopify admin."
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "rich_text",
            "label": "Rich text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Main accordion component"
      }
    ]
  }
{% endschema %}