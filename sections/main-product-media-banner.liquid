{% liquid
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign padding_sides = section.settings.padding_sides
  assign padding_top_mobile = section.settings.padding_top_mobile
  assign padding_bottom_mobile = section.settings.padding_bottom_mobile
  assign padding_sides_mobile = section.settings.padding_sides_mobile

  assign set_lazy_loading = 'eager'

  if section.index >= 2
    assign set_lazy_loading = 'lazy'
  endif
%}

{% style %}
  #{{ section.id }}.section-padding-settings {
    padding: {{ padding_top }}px {{ padding_sides }}px {{ padding_bottom }}px {{ padding_sides }}px;
  }

  @media (max-width: 767px) {
    #{{ section.id }}.section-padding-settings {
      padding: {{ padding_top_mobile }}px {{ padding_sides_mobile }}px {{ padding_bottom_mobile }}px {{ padding_sides_mobile }}px;
    }
  }
{% endstyle %}

{{ 'main-product-media-banner.css' | asset_url | stylesheet_tag }}

<div id="{{ section.id }}" class="section-padding-settings flex flex-col d-gap-15">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'mixed_media_banner' %}
        {% liquid
          assign image = block.settings.image | default: false
          assign rich_text = block.settings.rich_text | default: false
          assign reverse_order = block.settings.reverse_order
        %}

        {% 
          render 'main-product-media-banner',
          image: image,
          set_lazy_loading: set_lazy_loading,
          rich_text: rich_text,
          reverse_order: reverse_order
        %}
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Main product media banner",
    "tag": "section",
    "enabled_on": {
      "templates": ["product"]
    },
    "settings": [
      {
        "type": "header",
        "content": "Spacing - Desktop"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top - Desktop",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom - Desktop",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding_sides",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding sides - Desktop",
        "default": 15
      },
      {
        "type": "header",
        "content": "Spacing - Mobile"
      },
      {
        "type": "range",
        "id": "padding_top_mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top - Mobile",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding_bottom_mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom - Mobile",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding_sides_mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding sides - Mobile",
        "default": 15
      }
    ],
    "blocks": [
      {
        "type": "mixed_media_banner",
        "name": "Mixed media banner",
        "limit": 3,
        "settings": [
          {
            "type": "header",
            "content": "Settings"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Select image"
          },
          {
            "type": "richtext",
            "id": "rich_text",
            "label": "Rich text"
          },
          {
            "type": "checkbox",
            "id": "reverse_order",
            "label": "Reverse the order the Image and text are placed.",
            "default": false
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Main product media banner"
      }
    ]
  }
{% endschema %}